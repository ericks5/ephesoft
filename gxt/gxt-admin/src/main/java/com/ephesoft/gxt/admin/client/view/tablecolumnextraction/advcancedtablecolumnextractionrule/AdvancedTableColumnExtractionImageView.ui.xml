<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c='urn:import:com.ephesoft.gxt.core.client.ui.widget'
	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container">

	<container:HorizontalLayoutContainer
		ui:field="uploadImage" width="100%">
		<container:child>
			<container:VerticalLayoutContainer
				width="100%" ui:field="imageScrollVLayout">
				<g:ScrollPanel ui:field="imageScroll">
					<g:HorizontalPanel width="100%">
						<g:cell width="100%" height="100%" horizontalAlignment='ALIGN_CENTER'>
							<c:OverlayImage ui:field="pageImage" />
						</g:cell>
					</g:HorizontalPanel>
				</g:ScrollPanel>
			</container:VerticalLayoutContainer>
		</container:child>
	</container:HorizontalLayoutContainer>

</ui:UiBinder>